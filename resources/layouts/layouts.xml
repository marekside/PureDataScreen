<layouts xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">
    <!-- Layouts used for the for the four quadrants. -->
    <layout id="WahooLayout">
        <drawable class="Background" />
        <drawable id="Smiley" />
        <!-- Big number quadrant -->
        <label id="KPH" x="98%" y="5%" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_RIGHT" font="@Fonts.Bebas_40" />
        <label id="KPH_value" x="98%" y="5%" color="Graphics.COLOR_BLACK" justification="Graphics.TEXT_JUSTIFY_RIGHT" font="@Fonts.Bebas_150" />

        <!-- Small number quadrant -->
        <label id="HR" x="48%" y="45%" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_RIGHT" font="@Fonts.Bebas_30" />
        <label id="HR_value" x="48%" y="46%" color="Graphics.COLOR_BLACK" justification="Graphics.TEXT_JUSTIFY_RIGHT" font="@Fonts.Bebas_60" />

    </layout>
</layouts>
